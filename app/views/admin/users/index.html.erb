<div id="app_users">

	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Nome</th>
	      <th scope="col" class="d-none">Email</th>
	      <th scope="col" class="d-none">Handle</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <tr v-for="user in users" :key="user.id" >
	      <th scope="row">{{ user.id }}</th>
	      <td>{{ user.name }}</td>
	      <td class="d-none">{{ user.email }}</td>
	      <td class="d-none">{{ user.status }}</td> 
	      <td class="text-end" >
			<button type="button" class="btn btn-light btn-sm">
				<span class="fa fa-eye"></span>
			</button>
			<button type="button" class="btn btn-light btn-sm">
				<span class="fa fa-edit"></span>
			</button>
			<button  v-on:click="deleteUser(user.id)" type="button" class="btn btn-danger btn-sm">
				<span class="fa fa-trash"></span>
			</button>
	      </td>
	    </tr>
	  </tbody>
	</table>

	<a href="/admin/users/add" class="btn--add btn btn-success">+</a>

</div>